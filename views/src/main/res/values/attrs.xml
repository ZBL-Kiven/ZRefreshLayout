<?xml version="1.0" encoding="utf-8"?>
<resources>
    <declare-styleable name="DrawableTextView">
        <attr name="viewWidth" format="dimension" />
        <attr name="viewHeight" format="dimension" />
        <attr name="drawableWidth" format="dimension" />
        <attr name="drawableHeight" format="dimension" />
        <attr name="padding" format="dimension" />
        <attr name="paddingLeft" format="dimension" />
        <attr name="paddingRight" format="dimension" />
        <attr name="paddingTop" format="dimension" />
        <attr name="paddingBottom" format="dimension" />
        <attr name="drawablePadding" format="dimension" />
        <attr name="replaceDrawable" format="reference" />
        <attr name="selectedDrawable" format="reference" />
        <attr name="text" format="reference|string" />
        <attr name="textSize" format="dimension" />
        <attr name="textColor" format="color|reference" />
        <attr name="textColorSelect" format="color|reference" />
        <attr name="translationTime" format="integer" />
        <attr name="badgeEnable" format="boolean" />
        <attr name="badgeBackground" format="reference" />
        <attr name="badgeText" format="string" />
        <attr name="badgeTextColor" format="color|reference" />
        <attr name="badgeTextSize" format="dimension" />
        <attr name="badgePadding" format="dimension" />
        <attr name="badgeMinWidth" format="dimension" />
        <attr name="badgeMinHeight" format="dimension" />
        <attr name="badgeMargin" format="dimension" />
        <attr name="badgeMarginStart" format="dimension" />
        <attr name="badgeMarginEnd" format="dimension" />
        <attr name="badgeMarginTop" format="dimension" />
        <attr name="badgeMarginBottom" format="dimension" />
        <attr name="animDuration" format="integer" />
        <attr name="textFontPath" format="string" />
        <attr name="textStyle" format="enum">
            <enum name="normal" value="0" />
            <enum name="bold" value="1" />
            <enum name="italic" value="2" />
            <enum name="bold_italic" value="3" />
        </attr>
        <attr name="badgeInGravity" format="flags">
            <flag name="LEFT" value="2" />
            <flag name="TOP" value="4" />
            <flag name="RIGHT" value="8" />
            <flag name="BOTTOM" value="16" />
            <flag name="CENTER" value="1" />
        </attr>
        <attr name="orientation" format="enum">
            <enum name="left" value="0" />
            <enum name="top" value="1" />
            <enum name="right" value="2" />
            <enum name="bottom" value="3" />
        </attr>
        <attr name="gravity" format="flags">
            <flag name="LEFT" value="2" />
            <flag name="TOP" value="4" />
            <flag name="RIGHT" value="8" />
            <flag name="BOTTOM" value="16" />
            <flag name="CENTER" value="1" />
        </attr>
    </declare-styleable>

    <declare-styleable name="RefreshLayout">
        <attr name="android:clipChildren" />
        <attr name="android:clipToPadding" />
        <attr name="rlPrimaryColor" format="color|reference" />
        <attr name="rlAccentColor" format="color|reference" />
        <attr name="rlReboundDuration" format="integer" />
        <attr name="rlHeaderHeight" format="dimension" />
        <attr name="rlFooterHeight" format="dimension" />
        <attr name="rlHeaderInsetStart" format="dimension" />
        <attr name="rlFooterInsetStart" format="dimension" />
        <attr name="rlDragRate" format="float" />
        <attr name="rlHeaderMaxDragRate" format="float" />
        <attr name="rlFooterMaxDragRate" format="float" />
        <attr name="rlHeaderTriggerRate" format="float" />
        <attr name="rlFooterTriggerRate" format="float" />
        <attr name="rlEnableRefresh" format="boolean" />
        <attr name="rlEnableLoadMore" format="boolean" />
        <attr name="rlEnableHeaderTranslationContent" format="boolean" />
        <attr name="rlEnableFooterTranslationContent" format="boolean" />
        <attr name="rlHeaderTranslationViewId" format="reference" />
        <attr name="rlFooterTranslationViewId" format="reference" />
        <attr name="rlEnablePreviewInEditMode" format="boolean" />
        <attr name="rlEnableAutoLoadMore" format="boolean" />
        <attr name="rlEnableOverScrollBounce" format="boolean" />
        <attr name="rlEnablePureScrollMode" format="boolean" />
        <attr name="rlEnableNestedScrolling" format="boolean" />
        <attr name="rlEnableScrollContentWhenLoaded" format="boolean" />
        <attr name="rlEnableScrollContentWhenRefreshed" format="boolean" />
        <attr name="rlEnableLoadMoreWhenContentNotFull" format="boolean" />
        <attr name="rlEnableFooterFollowWhenLoadFinished" format="boolean" />
        <attr name="rlEnableFooterFollowWhenNoMoreData" format="boolean" />
        <attr name="rlEnableClipHeaderWhenFixedBehind" format="boolean" />
        <attr name="rlEnableClipFooterWhenFixedBehind" format="boolean" />
        <attr name="rlEnableOverScrollDrag" format="boolean" />
        <attr name="rlDisableContentWhenRefresh" format="boolean" />
        <attr name="rlDisableContentWhenLoading" format="boolean" />
        <attr name="rlFixedHeaderViewId" format="reference" />
        <attr name="rlFixedFooterViewId" format="reference" />
    </declare-styleable>

    <declare-styleable name="RefreshLayout_Layout">
        <attr name="layout_rlSpinnerStyle" format="enum">
            <enum name="Translate" value="0" />
            <enum name="Scale" value="1" />
            <enum name="FixedBehind" value="2" />
            <enum name="FixedFront" value="3" />
            <enum name="MatchLayout" value="4" />
            />
        </attr>
        <attr name="layout_rlBackgroundColor" format="color" />
    </declare-styleable>

</resources>