<?xml version="1.0" encoding="utf-8"?>
<resources>
    <declare-styleable name="DrawableTextView">
        <attr name="dtv_select" format="boolean" />
        <attr name="dtv_viewWidth" format="dimension" />
        <attr name="dtv_viewHeight" format="dimension" />
        <attr name="dtv_drawableWidth" format="dimension" />
        <attr name="dtv_drawableHeight" format="dimension" />
        <attr name="dtv_padding" format="dimension" />
        <attr name="dtv_paddingLeft" format="dimension" />
        <attr name="dtv_paddingRight" format="dimension" />
        <attr name="dtv_paddingTop" format="dimension" />
        <attr name="dtv_paddingBottom" format="dimension" />
        <attr name="dtv_drawablePadding" format="dimension" />
        <attr name="dtv_replaceDrawable" format="reference" />
        <attr name="dtv_selectedDrawable" format="reference" />
        <attr name="dtv_text" format="reference|string" />
        <attr name="dtv_textSelected" format="reference|string" />
        <attr name="dtv_clearTextIfEmpty" format="boolean" />
        <attr name="dtv_textSize" format="dimension" />
        <attr name="dtv_textColor" format="color|reference" />
        <attr name="dtv_textColorSelect" format="color|reference" />
        <attr name="dtv_translationTime" format="integer" />
        <attr name="dtv_badgeEnable" format="boolean" />
        <attr name="dtv_badgeBackground" format="color|reference" />
        <attr name="dtv_badgeBackgroundSelected" format="color|reference" />
        <attr name="dtv_background" format="color|reference" />
        <attr name="dtv_backgroundSelected" format="color|reference" />
        <attr name="dtv_badgeText" format="string" />
        <attr name="dtv_badgeTextColor" format="color|reference" />
        <attr name="dtv_badgeTextColorSelected" format="color|reference" />
        <attr name="dtv_badgeTextSize" format="dimension" />
        <attr name="dtv_badgePadding" format="dimension" />
        <attr name="dtv_badgeMinWidth" format="dimension" />
        <attr name="dtv_badgeMinHeight" format="dimension" />
        <attr name="dtv_badgeMargin" format="dimension" />
        <attr name="dtv_badgeMarginStart" format="dimension" />
        <attr name="dtv_badgeMarginEnd" format="dimension" />
        <attr name="dtv_badgeMarginTop" format="dimension" />
        <attr name="dtv_badgeMarginBottom" format="dimension" />
        <attr name="dtv_animDuration" format="integer" />
        <attr name="dtv_textFontPath" format="string" />
        <attr name="dtv_textStyle" format="enum">
            <enum name="normal" value="0" />
            <enum name="bold" value="1" />
            <enum name="italic" value="2" />
            <enum name="bold_italic" value="3" />
        </attr>
        <attr name="dtv_badgeInGravity" format="flags">
            <flag name="LEFT" value="2" />
            <flag name="TOP" value="4" />
            <flag name="RIGHT" value="8" />
            <flag name="BOTTOM" value="16" />
            <flag name="CENTER" value="1" />
        </attr>
        <attr name="dtv_orientation" format="enum">
            <enum name="left" value="0" />
            <enum name="top" value="1" />
            <enum name="right" value="2" />
            <enum name="bottom" value="3" />
        </attr>
        <attr name="dtv_gravity" format="flags">
            <flag name="LEFT" value="2" />
            <flag name="TOP" value="4" />
            <flag name="RIGHT" value="8" />
            <flag name="BOTTOM" value="16" />
            <flag name="CENTER" value="1" />
        </attr>
    </declare-styleable>

    <declare-styleable name="FoldTextView">
        <attr name="showMaxLine" format="integer" />
        <attr name="tipColor" format="reference|color" />
        <attr name="tipClickable" format="boolean" />
        <attr name="foldText" format="string" />
        <attr name="expandText" format="string" />
        <attr name="drawableSize" format="dimension" />
        <attr name="showTipAfterExpand" format="boolean" />
        <attr name="isSetParentClick" format="boolean" />
        <attr name="expandDrawable" format="color|reference" />
        <attr name="foldDrawable" format="color|reference" />
    </declare-styleable>

    <declare-styleable name="RefreshLayout">
        <attr name="android:clipChildren" />
        <attr name="android:clipToPadding" />
        <attr name="rlPrimaryColor" format="color|reference" />
        <attr name="rlAccentColor" format="color|reference" />
        <attr name="rlReboundDuration" format="integer" />
        <attr name="rlHeaderHeight" format="dimension" />
        <attr name="rlFooterHeight" format="dimension" />
        <attr name="rlHeaderInsetStart" format="dimension" />
        <attr name="rlFooterInsetStart" format="dimension" />
        <attr name="rlDragRate" format="float" />
        <attr name="rlHeaderMaxDragRate" format="float" />
        <attr name="rlFooterMaxDragRate" format="float" />
        <attr name="rlHeaderTriggerRate" format="float" />
        <attr name="rlFooterTriggerRate" format="float" />
        <attr name="rlEnableRefresh" format="boolean" />
        <attr name="rlEnableLoadMore" format="boolean" />
        <attr name="rlEnableHeaderTranslationContent" format="boolean" />
        <attr name="rlEnableFooterTranslationContent" format="boolean" />
        <attr name="rlHeaderTranslationViewId" format="reference" />
