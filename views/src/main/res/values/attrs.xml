        <attr name="rlEnableOverScrollBounce" format="boolean" />
        <attr name="rlEnablePureScrollMode" format="boolean" />
        <attr name="rlEnableNestedScrolling" format="boolean" />
        <attr name="rlEnableScrollContentWhenLoaded" format="boolean" />
        <attr name="rlEnableScrollContentWhenRefreshed" format="boolean" />
        <attr name="rlEnableLoadMoreWhenContentNotFull" format="boolean" />
        <attr name="rlEnableFooterFollowWhenLoadFinished" format="boolean" />
        <attr name="rlEnableFooterFollowWhenNoMoreData" format="boolean" />
        <attr name="rlEnableClipHeaderWhenFixedBehind" format="boolean" />
        <attr name="rlEnableClipFooterWhenFixedBehind" format="boolean" />
        <attr name="rlEnableOverScrollDrag" format="boolean" />
        <attr name="rlDisableContentWhenRefresh" format="boolean" />
        <attr name="rlDisableContentWhenLoading" format="boolean" />
        <attr name="rlFixedHeaderViewId" format="reference" />
        <attr name="rlFixedFooterViewId" format="reference" />
    </declare-styleable>

    <declare-styleable name="RefreshLayout_Layout">
        <attr name="layout_rlSpinnerStyle" format="enum">
            <enum name="Translate" value="0" />
            <enum name="Scale" value="1" />
            <enum name="FixedBehind" value="2" />
            <enum name="FixedFront" value="3" />
            <enum name="MatchLayout" value="4" />
        </attr>
        <attr name="layout_rlBackgroundColor" format="color" />
    </declare-styleable>

</resources>