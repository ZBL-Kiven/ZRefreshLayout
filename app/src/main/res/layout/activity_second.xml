<?xml version="1.0" encoding="utf-8"?>
<com.zj.views.list.refresh.layout.RefreshLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#eee"
    app:rlDragRate="1.5"
    app:rlHeaderHeight="80dp"
    app:rlHeaderTriggerRate="1.5">

    <com.zj.test.views.RefreshHeader
        android:layout_width="match_parent"
        android:layout_height="80dp" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:clipToPadding="false"
        android:overScrollMode="never"
        android:paddingBottom="30dp"
        android:scrollbars="none">

        <com.zj.views.DrawableTextView
            android:id="@+id/dtv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            app:dtv_animDuration="500"
            app:dtv_background="#fca"
            app:dtv_backgroundSelected="@drawable/personal_follow_btn_bg_selected"
            app:dtv_badgeBackground="#acc"
            app:dtv_badgeBackgroundSelected="#c09"
            app:dtv_badgeEnable="true"
            app:dtv_badgeInGravity="TOP|RIGHT"
            app:dtv_badgeMinHeight="15dp"
            app:dtv_badgeMinWidth="15dp"
            app:dtv_badgePadding="3dp"
            app:dtv_badgeText="9"
            app:dtv_badgeTextColor="#00A"
            app:dtv_badgeTextSize="12dp"
            app:dtv_drawableHeight="30dp"
            app:dtv_drawablePadding="3dp"
            app:dtv_drawableWidth="30dp"
            app:dtv_orientation="left"
            app:dtv_padding="5dp"
            app:dtv_replaceDrawable="@mipmap/ic_launcher"
            app:dtv_selectedDrawable="@mipmap/ic_launcher_round"
            app:dtv_text="addsc\n asdqs\n"
            app:dtv_textColor="#a00"
            app:dtv_textSize="22sp"
            app:dtv_translationTime="500" />

    </ScrollView>

    <com.zj.test.views.RefreshFooter
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:background="#acc" />

</com.zj.views.list.refresh.layout.RefreshLayout>