<?xml version="1.0" encoding="utf-8"?>
<com.zj.views.list.refresh.layout.RefreshLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#777"
    app:rlDragRate="1.5"
    app:rlHeaderHeight="80dp"
    app:rlHeaderTriggerRate="1.5">

    <com.zj.test.views.RefreshHeader
        android:layout_width="match_parent"
        android:layout_height="80dp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal">

        <com.zj.views.DrawableTextView
            android:id="@+id/dtv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            app:dtv_animDuration="500"
            app:dtv_background="#fca"
            app:dtv_backgroundSelected="@drawable/personal_follow_btn_bg_selected"
            app:dtv_badgeBackground="#acc"
            app:dtv_badgeBackgroundSelected="#c09"
            app:dtv_badgeEnable="false"
            app:dtv_badgeInGravity="TOP|RIGHT"
            app:dtv_badgeMinHeight="15dp"
            app:dtv_badgeMinWidth="15dp"
            app:dtv_badgePadding="5dp"
            app:dtv_badgeText="8"
            app:dtv_badgeTextColor="#500A"
            app:dtv_badgeTextSize="12dp"
            app:dtv_drawableHeight="30dp"
            app:dtv_drawableWidth="30dp"
            app:dtv_maxTextLength="10"
            app:dtv_orientation="left"
            app:dtv_paddingBottom="15dp"
            app:dtv_paddingLeft="20dp"
            app:dtv_paddingRight="20dp"
            app:dtv_paddingTop="15dp"
            app:dtv_replaceDrawable="@mipmap/ic_launcher"
            app:dtv_select="false"
            app:dtv_selectedDrawable="@mipmap/ic_launcher_round"
            app:dtv_text="阿巴斯七死八活"
            app:dtv_textColor="#a00"
            app:dtv_textSize="20sp" />

        <com.zj.views.DrawableTextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginStart="6dp"
            app:dtv_background="#caa"
            app:dtv_badgeEnable="true"
            app:dtv_badgeInGravity="RIGHT|TOP"
            app:dtv_badgeMinHeight="21dp"
            app:dtv_badgeMinWidth="21dp"
            app:dtv_badgeText=" "
            app:dtv_badgeTextSize="1sp"
            app:dtv_maxLength="120dp"
            app:dtv_maxLine="1"
            app:dtv_paddingBottom="10dp"
            app:dtv_paddingLeft="7dp"
            app:dtv_paddingRight="30dp"
            app:dtv_paddingTop="10dp"
            app:dtv_text="阿首都#Jkjkgghasd"
            app:dtv_textColor="#333333"
            app:dtv_textSize="16sp" />

        <com.zj.views.DrawableTextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginStart="6dp"
            app:dtv_background="#caa"
            app:dtv_badgeEnable="true"
            app:dtv_badgeInGravity="RIGHT|TOP"
            app:dtv_badgeMinHeight="21dp"
            app:dtv_badgeMinWidth="21dp"
            app:dtv_badgeText=" "
            app:dtv_badgeTextSize="1sp"
            app:dtv_maxLength="120dp"
            app:dtv_maxLine="1"
            app:dtv_paddingBottom="10dp"
            app:dtv_paddingLeft="7dp"
            app:dtv_paddingRight="30dp"
            app:dtv_paddingTop="10dp"
            app:dtv_text="interest"
            app:dtv_textColor="#333333"
            app:dtv_textSize="16sp" />
    </LinearLayout>

    <com.zj.test.views.RefreshFooter
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:background="#acc" />

</com.zj.views.list.refresh.layout.RefreshLayout>