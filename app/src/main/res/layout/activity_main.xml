<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#000"
    android:gravity="center"
    tools:context=".MainActivity">

    <com.zj.views.DrawableTextView
        android:id="@+id/dtv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:background="#aaa"
        app:badgeBackground="@drawable/ic_launcher_background"
        app:badgeEnable="true"
        app:badgeInGravity="TOP|RIGHT"
        app:badgeMinHeight="15dp"
        app:badgeMinWidth="15dp"
        app:badgePadding="3dp"
        app:badgeText="9"
        app:badgeTextColor="#00A"
        app:badgeTextSize="12dp"
        app:drawableHeight="20dp"
        app:drawablePadding="3dp"
        app:drawableWidth="20dp"
        app:orientation="top"
        app:padding="5dp"
        app:animDuration="3000"
        app:replaceDrawable="@android:drawable/btn_dialog"
        app:selectedDrawable="@android:drawable/btn_minus"
        app:text="index"
        app:textColor="#000"
        app:textColorSelect="#fff"
        app:textSize="12sp"
        app:translationTime="500"
        app:viewHeight="100dp"
        app:viewWidth="100dp" />

</LinearLayout>